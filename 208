#!/bin/bash

clear
echo -e "\033[1;36mA atualização irá atualiza a lista de pacotes do seu sistema e atualizar todos os seus pacotes instalados para suas versões mais recentes.\033[1;31m Para prosseguir aperte ENTER, para cancelar CTRL + C.\033[0m"
read  #enter
echo -e "\033[1;31mIniciando instalação, aguarde.\033[0m".
sleep 3
sudo apt-get update -y
clear
echo -e "\033[1;36m1° ETAPA CONCLUÍDA COM ÊXITO, LISTA DE PACOTES ATUALIZADA.\033[0m"
echo -e "\033[1;31mINICIANDO 2° ETAPA.\033[0m"
sleep 5
sudo apt-get dist-upgrade
clear
echo -e "\033[1;36m2° ETAPA CONCLUÍDA COM ÊXITO. TODOS OS SEUS PACOTES FORAM ATUALIZADOS PARA SUAS VERSÕES MAIS RECENTES.\033[0m"
echo ""
echo -e "\033[1;31mCONCLUINDO.\033[0m"
echo ""
sleep 3
clear
echo -e "\033[1;36m                   Atualização concluída com êxito.\033[0m"
2